@model WukkamanCleaningAgencyFrontend.Models.User

@{
    ViewData["Title"] = "Welcome Admin!";
}

<div class="row mt-4 min-vh-100">
    <div class="col-sm-8 offset-md-3">
        <h1 class="heading" style="color: #B6244F;">@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md-8">
                <section>
                        <h2>Choose options</h2>
                        <hr />
                        <div>
                            <a class="w-100 btn btn-lg text-light mt-5" asp-controller="Employee" style="background-color: #B6244F;">Employee Dashboard</a>
                            <a class="w-100 btn btn-lg mt-5" asp-controller="Shift" style="background-color: white;">Shift Dashboard</a>
                        </div>
                </section>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* @{await Html.RenderPartialAsync("_ValidationScriptsPartial");} *@
}
